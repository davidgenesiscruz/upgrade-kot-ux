{
  "manifest_version": 2,
  "name": "upgrade-kot-ux",
  "description": "Upgrade KOT userability experience; 1-click page-moving, 1-click 'dakoku' request.",
  "version": "1.0.0",
  "icons": {
    "128": "assets/icon_kintai-kun.png"
  },
  "background": {
    "scripts": [
      "assets/scripts/upgradeKotUx__background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "128": "assets/icon_kintai-kun.png"
    },
    "default_title": "upgrade-kot-ux"
  },
  "content_scripts": [
    {
      "matches": ["https://s2.kingtime.jp/*"],
      "js": ["assets/scripts/upgradeKotUx__content.js"]
    }
  ],
  "permissions": ["activeTab", "https://s2.kingtime.jp/*"],
  "web_accessible_resources": [
    "assets/kintai-kun.png",
    "assets/shukkin-kun.png",
    "assets/taikin-kun.png"
  ]
}
