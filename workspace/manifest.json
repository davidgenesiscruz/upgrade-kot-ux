{
  "manifest_version": 2,
  "name": "upgrade-kot-ux",
  "description": "Upgrade KOT UX.",
  "version": "1.0.0",
  "icons": {
    "16": "assets/images/warota.gif"
  },
  "background": {
    "scripts": [
      "assets/scripts/upgradeKotUx__background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "assets/images/warota.gif"
    },
    "default_title": "upgrade-kot-ux"
  },
  "content_scripts": [
    {
      "matches": ["https://s2.kingtime.jp/*"],
      "js": ["assets/scripts/upgradeKotUx__content.js"]
    }
  ],
  "permissions": ["activeTab", "https://s2.kingtime.jp/*"]
}
